<Window x:Class="House_of_Quran.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:House_of_Quran"
        mc:Ignorable="d"
        Title="MainWindow" FontFamily="{StaticResource Me_Quran}" MinHeight="450" MinWidth="800" ContentRendered="Window_ContentRendered" WindowStartupLocation="CenterScreen" WindowState="Maximized" Background="#FF202124">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.15*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="0.01*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.015*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <local:UserControl_QuranReader x:Name="userControl_QuranReader" Grid.Column="1" Grid.Row="1"/>

        <Grid Grid.Column="0" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="0.1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.050*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="0.0*"/>
            </Grid.RowDefinitions>

            <Border Grid.Column="1" Grid.Row="1" CornerRadius="20,20,0,0" Background="#B2FFFFFF">
                <Grid>
                    
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
